# Huawei FusionSolar API Configuration
# Copy this file to .env and fill in your actual credentials

# Base URL of your Huawei FusionSolar region
# Common options:
#   Europe: https://eu5.fusionsolar.huawei.com
#   International: https://intl.fusionsolar.huawei.com
#   Americas: https://la5.fusionsolar.huawei.com
HUAWEI_BASE_URL=https://eu5.fusionsolar.huawei.com

# Your FusionSolar OpenAPI credentials
# Contact eu_inverter_support@huawei.com to create an OpenAPI account
HUAWEI_USERNAME=your-username-here
HUAWEI_PASSWORD=your-password-here

# Optional: Station/Plant code if required by your setup
HUAWEI_STATION_CODE=

# Polling interval in seconds (default: 30)
# Note: Huawei API has strict rate limits (~1 request/minute per endpoint)
# Setting this too low may result in API errors
HUAWEI_POLLING_INTERVAL=30

# Request timeout in seconds (default: 30)
HUAWEI_REQUEST_TIMEOUT=30
